<h1>登録済みのユーザー一覧</h1>
<table class='table'>
    <thead>
        <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>更新日時</th>
            <th>タスク数</th>
            <th>ロール</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.created_at %></td>
                <td><%= user.tasks.count %></td>
                <td><%= user.admin %></td>
                <td><%= link_to '詳細',admin_user_path(user.id) %></td>
                <td><%= link_to '編集',edit_admin_user_path(user.id) %></td>
                <td><%= link_to '削除',admin_user_path(user.id),method: :delete, data: { confirm: '本当に削除してよろしいですか？'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'ユーザーの新規作成', new_admin_user_path %>
