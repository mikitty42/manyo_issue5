<%= form_with(model: @task,local: true,url: choose_new_or_edit) do |form| %>
    <% if @task.errors.any? %>
        <div id='error_explanation'>
            <h2><%= @task.errors.count %>件のエラーがあります</h2>
            <ul>
            
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class='task_title'>
        <%= form.label :title,Task.human_attribute_name(:title) %>
        <%= form.text_field :title %>
    </div>
    
    <div class='task_content'>
        <%= form.label :content,Task.human_attribute_name(:content) %>
        <%= form.text_field :content %>
    </div>
    
    <div class='task_deadline'>
        <%= form.label :deadline,Task.human_attribute_name(:deadline) %>
        <%= form.date_field :deadline %>
    </div>
    
    <%= form.submit %>
<% end %>

<%= link_to 'Task一覧に戻る',tasks_path %>
